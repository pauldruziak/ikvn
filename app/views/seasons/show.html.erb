<div class="block">
  <div class="secondary-navigation">
    <ul>
      <% if show_admin_content? %>
        <li><%= link_to t('season.new'), new_season_path %></li>
        <li><%= link_to t('season.edit'), edit_season_path(@season) if @season.rounds.published.empty? %></li>
        <li><%= link_to t('season.delete'), @season, :confirm => 'Are you sure?', :method => :delete if @season.rounds.published.empty? %></li>
      <% end -%>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">  	
  	<h2 class="title"><%=t('season.name', :name => @season.name) %></h2>
    <div class="inner">
       <%= render :partial => 'layouts/flashes' -%>
       <%= render :partial => 'rounds', :object => show_admin_content? ? @season.rounds : @season.rounds.published %>   
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>