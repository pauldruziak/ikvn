<div class="block">
  <div class="secondary-navigation">
    <ul>
      <% if_authorized? :new, current_user do %><li><%= link_to t('season.new'), new_season_path %></li><% end -%>
      <% if_authorized? :edit, current_user do %><li><%= link_to t('season.edit'), edit_season_path(@season) if @season.rounds.published.empty? %></li><% end -%>
      <% if_authorized? :delete, current_user do %><li><%= link_to t('season.delete'), @season, :confirm => 'Are you sure?', :method => :delete if @season.rounds.published.empty? %></li><% end -%>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">  	
  	<h2 class="title"><%=t('season.name', :name => @season.name) %></h2>
    <div class="inner">
    	<div class="flash">
      <% flash.each do |type, message| -%>
      <div class="message <%= type %>">
        <p><%=  message %></p>
      </div>
      <% end -%>
    </div>      
       <%= render :partial => 'rounds', :object => @season.rounds %>	          	          
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>