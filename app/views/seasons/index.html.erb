<div class="block">
	<div class="flash">
      <%% flash.each do |type, message| -%>
      <div class="message <%%= type %>">
        <p><%%=  message %></p>
      </div>
      <%% end -%>
    </div>
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', seasons_path %></li>
      <% if_authorized? :new, User  do %><li><%= link_to 'New', new_season_path %></li><% end -%>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Seasons</h2>
    <div class="inner">
      <% form_tag "", :class => :form do -%>
        <table class="table">
          <tr>             
            <th class="first">ID</th>
            <th>Name</th>
            <th>Created at</th>
            <th class="last">&nbsp;</th>
          </tr>
          <% @seasons.each do |season| -%>
          <tr>
            <td>
              <%= season.id %>
            </td>
            <td>
              <%= link_to season.name, season_path(season) %>
            </td>
            <td>
              <%= season.created_at %>
            </td>
            <td class="last">
              <%= link_to 'show', season_path(season) %> |              
              <%= link_to 'destroy', season_path(season), :method => :delete, :confirm => 'Are you sure?' %>
            </td>
          </tr>          
          <% end -%>
        </table>
        <div class="actions-bar">
          <div class="actions">
          </div>
          
          <div class="clear"></div>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>