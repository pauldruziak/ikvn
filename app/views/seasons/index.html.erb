<div class="block">
	<div class="flash">
      <%% flash.each do |type, message| -%>
      <div class="message <%%= type %>">
        <p><%%=  message %></p>
      </div>
      <%% end -%>
    </div>
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', seasons_path %></li>
      <% if_authorized? :new, User  do %><li><%= link_to 'New', new_season_path %></li><% end -%>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Seasons</h2>
    <div class="inner">
      <% form_tag "", :class => :form do -%>
          <% @seasons.each do |season| -%>
              <table class="table">                      
              	<tr>
              	  <th><%= h("Season: "+season.name) %></th>
              	  <th></th>
              	</tr>              	
              	<% season.rounds.each do |round| %>
              	  <tr>              	              	  
              	    <td><%=link_to h("Round: "+round.name), season_round_path(season, round) %></td>
              	    <td class="last"><%=link_to "edit", edit_season_round_path(season, round) %></td>              	                  	  </tr>
            	<% end -%>              	
	          	  </table>
          <% end -%>
        <div class="actions-bar">
          <div class="actions">
          </div>
          
          <div class="clear"></div>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>