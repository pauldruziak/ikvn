<h1><%= t 'web_app' %></h1>
<div class="block" id="block-signup">
  <h2><%= t 'txt.titles.signup' %></h2>        
  <div class="content">
    <div class="flash">
      <% flash.each do |type, message| -%>
      <div class="message <%= type %>">
        <p><%=  message %></p>
      </div>
      <% end -%>
    </div>
    <% form_for :User, :url => users_path, :html => { :class => 'form' } do |f| -%>
      <div class="group">
        <div class="left">
          <label class="label"><%= User.human_attribute_name('login') %></label>
        </div>
        <div class="right">
          <%= f.text_field :login, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
      <div class="group">
        <div class="left">
          <label class="label"><%= User.human_attribute_name('email') %></label>                
        </div>
        <div class="right">
          <%= f.text_field :email, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
      <div class="group">
        <div class="left">
          <label class="label"><%= User.human_attribute_name('password') %></label>
        </div>
        <div class="right">
          <%= f.password_field :password, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
      
      <div class="group">
        <div class="left">
          <label class="label"><%= User.human_attribute_name('password') %></label>
        </div>
        <div class="right">
          <%= f.password_field :password_confirmation, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
      
      <div class="group navform">
        <input type="submit" class="button" value="Sign up" />
      </div>
    <% end -%>
  </div>
</div>