<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', questions_path  %></li>
      <li class="active"><%= link_to 'New', new_question_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">New Question</h2>
    <div class="inner">
      <% form_for :question, :url => questions_path, :html => { :class => :form } do |f| -%>
        
          <div class="group">
            <%= f.label :round_id, "round_id", :class => :label %>
            <%= f.text_field :round_id, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :name, "name", :class => :label %>
            <%= f.text_field :name, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :body, "body", :class => :label %>
            <%= f.text_area :body, :class => 'text_area' %>
            <span class="description">Ex: a simple text</span>
          </div>
        
        <div class="group navform">
          <input type="submit" class="button" value="Save &rarr;" /> or <%= link_to 'Cancel', questions_path %>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>