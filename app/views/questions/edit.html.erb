<div class="block">
  <div class="content">            
    <h2 class="title">Edit Question</h2>
    <div class="inner">
      <% form_for @question, :url => season_round_question_path(@question.round.season, @question.round, @question), :html => { :class => :form } do |f| -%>
          <div class="flash">
              <%= f.error_messages({:class => "message error"}) %>
          </div>
          <div class="group">
            <%= f.label :name, "Name", :class => :label %>
            <%= f.text_field :name, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :body, "Body", :class => :label %>
            <%= f.text_area :body, :class => 'text_area' %>
            <span class="description">Ex: a simple text</span>
          </div>
        
        <div class="group navform">
          <input type="submit" class="button" value="Save &rarr;" /> or <%= link_to 'Cancel', season_round_path(@question.round.season, @question.round) %>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>