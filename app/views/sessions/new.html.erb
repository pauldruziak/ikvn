<h1><%= t 'web_app' %></h1>
<div class="block" id="block-login">
  <h2><%= t 'txt.titles.login' %></h2>        
  <div class="content login">
    <%= render :partial => 'layouts/flashes' -%>
    <% form_for :session, :url => session_path, :html => { :class => 'form login' } do |form| -%>
      <div class="group">
	    <div class="left"><%= form.label :email, User.human_attribute_name('email'),:class => 'label right' %></div>
	    <div class="right"><%= form.text_field :email, :class => 'text_field' %> </div> 
	    <div class="clear"></div>
	  </div>
	  <div class="text_field group">
	    <div class="left"><%= form.label :password, User.human_attribute_name('password'),:class => 'label right' %></div>
	    <div class="right"><%= form.password_field :password, :class => 'text_field' %></div>
	    <div class="clear"></div>
	  </div>
	  <div class="text_field group">
	    <div class="left" style="text-align:right;margin-top:3px"><%= form.check_box :remember_me, :class => 'right' %></div>
	    <div class="right"><%= form.label :remember_me, User.human_attribute_name('remember_me'),:class => 'label' %></div>
	    <div class="clear"></div>
	  </div>
	  <div class="group navform">
        <div class="right">
	    <%= form.submit t('txt.signin'), :disable_with => "Please wait...", :class => "button" %>
	    </div>
        <div class="clear"></div>
      </div>	          
    <% end -%>
    <div class="group">
      <p><%= link_to t('txt.signup'), new_user_path %></p>
      <p><%= link_to "Forgot password?", new_password_path %></p>
    </div>

  </div>
</div>
