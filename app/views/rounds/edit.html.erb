<div class="block">
  <div class="content">            
    <h2 class="title"><%=link_to t('season.name', :name => h(@round.season.name)), season_path(@round.season) %> → <%= link_to t('round.name', :name => h(@round.name)), season_round_path(@round.season, @round) %> → <%= t 'round.titles.edit' %></h2>
    <div class="inner">
      <% form_for @round, :url => season_round_path(@round.season, @round), :html => { :class => :form } do |f| -%>
		  <div class="flash">
              <%= f.error_messages({:class => "message error"}) %>
          </div>
          <div class="group">
            <%= f.label :name, Round.human_attribute_name('name'), :class => :label %>
            <%= f.text_field :name, :class => 'text_field' %>
            <span class="description"><%= t 'round.attributes.name.description' %></span>
          </div>

          <div class="group">
            <%= f.label :start_responses_at, Round.human_attribute_name('start_responses_at'), :class => :label %>
            <%= f.datetime_select :start_responses_at, :class => 'datetime_select' %>
          </div>

          <div class="group">
            <%= f.label :end_responses_at, Round.human_attribute_name('end_responses_at'), :class => :label %>
            <%= f.datetime_select :end_responses_at, :class => 'datetime_select' %>
          </div>

          <div class="group">
            <%= f.label :start_assess_at, Round.human_attribute_name('start_assess_at'), :class => :label %>
            <%= f.datetime_select :start_assess_at, :class => 'datetime_select' %>
          </div>

          <div class="group">
            <%= f.label :end_assess_at, Round.human_attribute_name('end_assess_at'), :class => :label %>
            <%= f.datetime_select :end_assess_at, :class => 'datetime_select' %>
          </div>
        
        <div class="group navform">
          <input type="submit" class="button" value="<%= t 'txt.save' %>" /> <%= t 'txt.or'%> <%= link_to t('txt.cancel'), season_path(@round.season) %>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>